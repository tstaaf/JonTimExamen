@model Employee

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6" style="text-align:center;">
        <a class="btn" asp-area="" asp-controller="Visitor" asp-action="Index">
            <p style="">Check in</p>
            <img class="img-responsive" src="images/meeting.jpg" style="border: 1px solid; height: 250px; width: 350px;" />
        </a>
    </div>

    <div class="col-md-6" style="text-align:center;">
        <a class="btn" asp-area="" asp-controller="Visitor" asp-action="CheckOut">
            <p>Check out</p>
            <img class="img-responsive" src="images/leave.jpg" style="border: 1px solid; height: 250px; width: 350px;" />
        </a>
    </div>


    <div class="col-md-1" style="text-align:center; height: 50px;  position: absolute; right: 15px; top: 10px;">
        @{
            if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Visitor" asp-action="History" class="btn btn-success">Settings</a>
            }

            else
            {
                <a class="btn btn-success" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
            }
        }
    </div>
</div>
