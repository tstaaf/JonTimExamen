@model Visitor
@{
    ViewData["Title"] = "CheckIn";
}


@if (User.Identity.IsAuthenticated)
{

    <div class="row">
        <div class="col-md-6">
            <div class="vertical-menu">
                <a href="@Url.Action("History", "Visitor")">
                    <span>History</span>
                </a>
                <a href="@Url.Action("CurrentVisitors", "Visitor")">
                    <span>Current Visitors</span>
                </a>
                <a href="@Url.Action("Index", "Visitor")" class="active">
                    <span>Check in visitor</span>
                </a>
                <a href="@Url.Action("LogOut", "Account")">Log Out</a>
            </div>
        </div>

        <div class="col-md-6">
            <p style="font-size: 20px">
                <b>Check in visitor</b>
            </p>
            <form method="post" asp-controller="Visitor" asp-action="CheckIn">

                <div class="form-group">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" required="required" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" required="required" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Company"></label>
                    <input asp-for="@Model.Company" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Check In" class="btn btn-success center-block" />
                </div>
            </form>
        </div>

        <div class="col-md-6 col-md-offset-6">
            @if (ViewBag.visitor != null)
            {
                var name = ViewBag.visitor.FirstName;
                var lastName = ViewBag.visitor.LastName;
                var company = ViewBag.visitor.Company;
                var number = ViewBag.visitor.RandomNumber;

                <p><b>@name  @lastName</b></p>
                <qrcode content="@number,  @name,  @lastName,  @company" width="200" height="200" />
                <p><b>@number</b></p>
            }
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form method="post" asp-controller="Visitor" asp-action="CheckIn">

                <div class="form-group">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" required="required" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" required="required" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Company"></label>
                    <input asp-for="@Model.Company" class="form-control" />
                </div>

                <div id="camera" class="form-group">

                </div>

                @*<div class="form-group">
                    <input type="button" class="btn btn-success" value="Take picture" onclick="takePicture()" />
                </div>

                <div id="results">

                </div>*@

                <div class="form-group">
                    <input type="submit" value="Check In" class="btn btn-success center-block" />
                </div>


            </form>
        </div>

        <div class="col-md-2"></div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Camera</div>
                <div class="panel-body">
                    <div id="camera"></div>
                    <!-- A button for taking snaps -->
                    <form>
                        <input type="button" class="btn btn-success" value="Take Snapshot" onClick="takePicture()">
                    </form>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Captured Photo</div>
                <div class="panel-body">
                    <div id="results">Your captured image will appear here...</div>
                </div>
                <br />
                <br />
            </div>
        </div>

        <div class="col-md-6 col-md-offset-3">
            @if (ViewBag.visitor != null)
            {
                var name = ViewBag.visitor.FirstName;
                var lastName = ViewBag.visitor.LastName;
                var company = ViewBag.visitor.Company;
                var number = ViewBag.visitor.RandomNumber;

                <p><b>@name  @lastName</b></p>
                <qrcode content="@number,  @name,  @lastName,  @company" width="200" height="200" />
                <p><b>@number</b></p>
            }
        </div>
    </div>

    <script language="JavaScript">
        Webcam.set({
            width: 320,
            height: 240,
            image_format: 'jpeg',
            jpeg_quality: 90
        });
        Webcam.attach('camera');
    </script>
    <script language="JavaScript">

        function takePicture() {
            Webcam.snap(function (data_uri) {
                document.getElementById('results').innerHTML = '<img src="' + data_uri + '"/>';
                Webcam.upload(data_uri, '/Camera/Capture', function (code, text) {
                        alert('Photo Captured');
                });
            });
        }
    </script>
}






